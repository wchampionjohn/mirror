<script type="text/javascript" charset="utf-8">
  <% unless flash[:alert].nil? %>
    toastr.error('<%= j flash[:alert] %>', 'Error');
    <% flash.discard(:alert) %>
  <% end %>

  <% unless flash[:notice].nil? %>
    toastr.info('<%= j flash[:notice] %>', 'Info');
    <% flash.discard(:notice) %>
  <% end %>

  <% unless flash[:success].nil? %>
    toastr.success('<%= j flash[:success] %>', 'Success');
    <% flash.discard(:Success) %>
  <% end %>
</script>
