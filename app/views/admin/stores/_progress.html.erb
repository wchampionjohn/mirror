  <div class="m-wizard__head m-portlet__padding-x">
    <div class="m-wizard__progress">
      <div class="progress">
        <div class="progress-bar"
          role="progressbar"
          aria-valuenow="100"
          aria-valuemin="0"
          aria-valuemax="100"
          style="width: <%= current_object.new_record? ? '0' : '100' %>%;">
        </div>
      </div>
    </div>
    <div class="m-wizard__nav">
      <div class="m-wizard__steps">
          <div class="m-wizard__step <%= class_of_step(current_object, 1) %>">
            <%= link_to(path_of_step(current_object, 1), class: 'm-wizard__step-number') do %>
            <span>
              <i class="fa fa-gear"></i>
            </span>
          <% end %>
          <div class="m-wizard__step-info">
            <div class="m-wizard__step-title">
              1.基本設定
            </div>
          </div>
        </div>
        <div class="m-wizard__step <%= class_of_step(current_object, 2) %>">
          <%= link_to(path_of_step(current_object, 2), class: 'm-wizard__step-number') do %>
          <span>
            <i class="fa fa-tv"></i>
          </span>
          <% end %>
          <div class="m-wizard__step-info">
            <div class="m-wizard__step-title">
              2. 選單設定
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
